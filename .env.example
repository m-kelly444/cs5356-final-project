# Database Configuration
# For local development, use SQLite
DATABASE_URL=file:./cyberpulse.db
# For production with Turso or similar service
# DATABASE_URL=libsql://your-database-url.turso.io
# DATABASE_AUTH_TOKEN=your-database-auth-token

# Next Auth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-at-least-32-chars

# External APIs
# National Vulnerability Database API Key (optional but recommended)
NVD_API_KEY=your-nvd-api-key

# VirusTotal API Key (optional)
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# Node Environment
NODE_ENV=development

# Analytics (optional)
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id